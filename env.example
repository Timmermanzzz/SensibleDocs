# Frontend Configuration
VITE_APP_TITLE=Sensible Docs
VITE_APP_VERSION=1.0.0
VITE_API_BASE_URL=http://localhost:3001/api

# Backend Configuration
NODE_ENV=development
PORT=3001
CORS_ORIGIN=http://localhost:3000

# AI Service Configuration
AI_SERVICE_URL=http://localhost:8000
AI_API_KEY=your-ai-api-key-here
AI_MODEL_TIMEOUT=30000

# File Upload Configuration
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=pdf,doc,docx,txt
UPLOAD_DIR=./uploads
TEMP_DIR=./tmp/demo

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./tmp/demo/logs/app.log
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-here
SESSION_SECRET=your-session-secret-here
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Database Configuration (if needed later)
DATABASE_URL=postgresql://user:password@localhost:5432/sensible_docs

# Demo Configuration
DEMO_MODE=true
DEMO_RESET_INTERVAL=3600000

# Private.ai API Configuration
PRIVATE_AI_API_KEY=your_private_ai_api_key_here

# Supabase Configuration (for persistent audit logging)
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-anon-key 